{
  "name": "measurelinx",
  "version": "1.0.0",
  "description": "AI-powered SAAS tool for process measurement, analytics, and instrumentation projects",
  "main": "index.js",
  "scripts": {
    "start": "node server/index.js",
    "start-dev": "NODE_ENV=development nodemon server/index.js",
    "start-test": "NODE_ENV=test nodemon server/index.js",
    "start-prod": "NODE_ENV=production node server/index.js",
    "test": "jest",
    "client": "cd client && npm start",
    "server": "nodemon server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "keywords": [
    "process analytics",
    "instrumentation",
    "SAAS",
    "AI",
    "process measurement",
    "documentation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^3.8.0",
    "apollo-server-express": "^3.12.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.7.1",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.3.4",
    "openai": "^4.0.0",
    "langchain": "^0.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1"
  }
}