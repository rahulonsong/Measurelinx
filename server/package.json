{
  "name": "papiloom-server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "NODE_ENV=test jest --runInBand",
    "test:watch": "NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand",
    "test:graphql": "NODE_ENV=test jest tests/unit/graphql --runInBand",
    "test:utils": "NODE_ENV=test jest tests/unit/utils --runInBand",
    "test:models": "NODE_ENV=test jest tests/unit/models --runInBand",
    "test:routes": "NODE_ENV=test jest tests/integration/routes --runInBand",
    "dev": "NODE_ENV=development MONGO_DATABASE=papiloomdev nodemon server.js",
    "init:test-data": "NODE_ENV=test MONGO_DATABASE=papiloomtest node scripts/initTestData.js",
    "test-server": "NODE_ENV=test MONGO_DATABASE=papiloomtest npm run init:test-data && NODE_ENV=test MONGO_DATABASE=papiloomtest nodemon server.js",
    "prod": "NODE_ENV=production MONGO_DATABASE=papiloomprod node server.js",
    "build": "node server.js",
    "db:copy-helper": "NODE_ENV=development node scripts/copyHelperCollections.js",
    "db:test-init": "NODE_ENV=test node scripts/testAppInitialization.js",
    "db:create-appenv": "NODE_ENV=development node scripts/createAppEnv.js",
    "db:init-all": "npm run db:copy-helper && npm run db:create-appenv && npm run db:test-init && npm run init:test-data"
  },
