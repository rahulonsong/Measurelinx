# AWS S3 Configuration for Return Labels
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=your_region
AWS_S3_BUCKET=your_bucket_name

# SMTP Configuration for Return Label Emails
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=your_from_email

# Other existing environment variables...

# Server Configuration
PORT=4000
MONGO_LOCAL_PORT=7017
MONGO_DOCKER_PORT=27017
NODE_LOCAL_PORT=4000
NODE_DOCKER_PORT=4000
NODE_ENV=development # Change to 'test' or 'production' accordingly

# JWT Authentication
JWT_KEY=your_jwt_secret_key_here
JWT_EXPIRATION=7d
JWT_EXPIRATION_DAYS=7
JWT_HASH_COUNT=12

# Application Settings
BASE_URL=http://localhost:4000 # Change to your domain in production
BRAND_NAME='Papiloom'
APP_CURRENCY=$
CURRENCY=cad
ACTIVECURRENCY=CAD
VIEWED_ITEMS_COUNT=10
ORDERED_ITEMS_COUNT=10
DEAL_ITEMS_LIMIT=20
CATEGORY_ITEMS_LIMIT=20
DEFAULT_DELIVERY_FEE=10

# Trial Settings
NUMBER_OF_TRIALS_OFFERED=5
MAXIMUM_FREE_PROJECTS=5
MAXIMUM_FREE_EXECUTIONS=5
ANADEZ_MAIN_EXECUTIONS=5
TRIAL_EXPIRY_DAYS_NUMBER=7
IS_ON_TRIAL=false

# OTP Settings
SALT_ROUNDS_OTP=12
OTP_EXPIRY=3600000

# MongoDB Connection
MONGO_USER=your_mongo_username
MONGO_PASS=your_mongo_password
MONGO_CLUSTER_URL=your_cluster_url
MONGO_DATABASE=papiloomdev # Use papiloomtest for test, papiloomprod for production

# VUE App Settings
VUE_APP_BASE_URL=http://localhost:4000
VUE_APP_BASE_URL_DEV=http://localhost:4000

# Stripe Integration
STRIPE_KEY=your_stripe_key
STRIPE_SIGN_KEY=your_stripe_sign_key
TAX_COUNTRY=13

# AWS S3 Settings
S3_BUCKET_NAME_ITEM=your_s3_bucket_item
S3_BUCKET_NAME_RESOURCE=your_s3_bucket_resource
S3_BUCKET_NAME_INVOICE=your_s3_bucket_invoice
S3_BUCKET_NAME_LABELS=your_s3_bucket_labels
S3_BUCKET_REGION=your_s3_region
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key
S3_EXPIRATION_PERIOD=604800

# Testing Configuration
USE_IN_MEMORY_DB=false # Set to true to use MongoDB memory server for testing
CONNECT_DB_IN_TESTS=false # Set to true to connect to DB in test environment automatically 